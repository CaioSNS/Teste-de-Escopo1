
public class TestaDeEscopo1 {

	    public static void main(String[] args) {

	        double salario = 3752.0;

	        if (salario >= 1900.0 && salario <= 2800.0) {
	        	System.out.println( "o IR é de  7,5% e pode reduzir na declaração o valor de 142");
	        } else {
	        	if (salario >= 2800.01 && salario <= 3751.0 ) {
	        		System.out.println("o IR é de 15%% e pode reduzir na declaração o valor de 350");
	        	 } else {
	        		 if (salario >=3751.01 && salario <= 4664.0) {
	        			 System.out.println("o IR é de 22,5% e pode reduzir na declaração o valor de 636");
	        		 }
	        	 }
	        }
	        
	        
	        
	    }
	}
